{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
