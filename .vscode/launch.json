{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API (Nodemon + TS)",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--watch",
        "src",
        "--ext",
        "ts",
        "--exec",
        "ts-node -r tsconfig-paths/register src/server.ts"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
